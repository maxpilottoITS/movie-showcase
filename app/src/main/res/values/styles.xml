<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="colorPrimary">#ffffff</item>
        <item name="android:statusBarColor">#cccccc</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnPrimary">#202020</item>
        <item name="android:textColorPrimary">#202020</item>
        <item name="android:textColorSecondary">#202020</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="colorPrimary">#303030</item>
        <item name="android:statusBarColor">#303030</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">#303030</item>
        <item name="android:colorBackground">#303030</item>
        <item name="android:background">#303030</item>
        <item name="colorOnPrimary">#eeeeee</item>
        <item name="android:textColorPrimary">#eeeeee</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
